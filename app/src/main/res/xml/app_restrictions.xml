<restrictions xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
    Refer to the javadoc of RestrictionsManager for detail of this file.
    https://developer.android.com/reference/android/content/RestrictionsManager.html
    -->

    <!-- global restrictions -->
    <restriction
        android:description="@string/login_base_url_description"
        android:key="login_base_url"
        android:restrictionType="string"
        android:title="@string/login_base_url_title"/>

    <restriction
        android:description="@string/login_user_name_description"
        android:key="login_user_name"
        android:restrictionType="string"
        android:title="@string/login_user_name_title"/>

    <restriction
        android:key="login_password"
        android:restrictionType="string"
        android:title="@string/login_password_title"/>

    <restriction
        android:defaultValue="-1"
        android:key="proxy_type"
        android:restrictionType="integer"
        android:title="@string/proxy_type_title"/>

    <restriction
        android:key="proxy_host"
        android:restrictionType="string"
        android:title="@string/proxy_host_title"/>

    <restriction
        android:defaultValue="9050"
        android:key="proxy_port"
        android:restrictionType="integer"
        android:title="@string/proxy_port_title"/>

    <restriction
        android:defaultValue="false"
        android:key="distrust_system_certs"
        android:restrictionType="bool"
        android:title="@string/distrust_system_certs_title"/>

    <restriction
        android:defaultValue="14400"
        android:key="default_sync_interval"
        android:restrictionType="integer"
        android:title="@string/default_sync_interval"/>

    <restriction
        android:key="organization"
        android:restrictionType="string"
        android:title="@string/organization"/>

    <restriction
        android:key="managed_by"
        android:restrictionType="string"
        android:title="@string/managed_by_title"
        android:description="@string/managed_by_description"/>

    <!-- Account 1 (Primary) -->
    <restriction
        android:description="@string/login_account_name_description"
        android:key="login_account_name"
        android:restrictionType="string"
        android:title="@string/login_account_name_title"/>

    <!-- Account 2 -->
    <restriction
        android:description="@string/login_base_url_description"
        android:key="login_base_url_2"
        android:restrictionType="string"
        android:title="@string/login_base_url_title_2"/>

    <restriction
        android:description="@string/login_user_name_description"
        android:key="login_user_name_2"
        android:restrictionType="string"
        android:title="@string/login_user_name_title_2"/>

    <restriction
        android:key="login_password_2"
        android:restrictionType="string"
        android:title="@string/login_password_title_2"/>

    <restriction
        android:description="@string/login_account_name_description"
        android:key="login_account_name_2"
        android:restrictionType="string"
        android:title="@string/login_account_name_title_2"/>

    <!-- Account 3 -->
    <restriction
        android:description="@string/login_base_url_description"
        android:key="login_base_url_3"
        android:restrictionType="string"
        android:title="@string/login_base_url_title_3"/>

    <restriction
        android:description="@string/login_user_name_description"
        android:key="login_user_name_3"
        android:restrictionType="string"
        android:title="@string/login_user_name_title_3"/>

    <restriction
        android:key="login_password_3"
        android:restrictionType="string"
        android:title="@string/login_password_title_3"/>

    <restriction
        android:description="@string/login_account_name_description"
        android:key="login_account_name_3"
        android:restrictionType="string"
        android:title="@string/login_account_name_title_3"/>

    <!-- Account 4 -->
    <restriction
        android:description="@string/login_base_url_description"
        android:key="login_base_url_4"
        android:restrictionType="string"
        android:title="@string/login_base_url_title_4"/>

    <restriction
        android:description="@string/login_user_name_description"
        android:key="login_user_name_4"
        android:restrictionType="string"
        android:title="@string/login_user_name_title_4"/>

    <restriction
        android:key="login_password_4"
        android:restrictionType="string"
        android:title="@string/login_password_title_4"/>

    <restriction
        android:description="@string/login_account_name_description"
        android:key="login_account_name_4"
        android:restrictionType="string"
        android:title="@string/login_account_name_title_4"/>

    <!-- Account 5 -->
    <restriction
        android:description="@string/login_base_url_description"
        android:key="login_base_url_5"
        android:restrictionType="string"
        android:title="@string/login_base_url_title_5"/>

    <restriction
        android:description="@string/login_user_name_description"
        android:key="login_user_name_5"
        android:restrictionType="string"
        android:title="@string/login_user_name_title_5"/>

    <restriction
        android:key="login_password_5"
        android:restrictionType="string"
        android:title="@string/login_password_title_5"/>

    <restriction
        android:description="@string/login_account_name_description"
        android:key="login_account_name_5"
        android:restrictionType="string"
        android:title="@string/login_account_name_title_5"/>

    <!-- per account restrictions -->
    <restriction
        android:defaultValue="false"
        android:key="wifi_only"
        android:restrictionType="bool"
        android:title="@string/wifi_only_title"/>

    <restriction
        android:key="wifi_only_ssids"
        android:restrictionType="string"
        android:title="@string/wifi_only_ssids_title"/>

</restrictions>
